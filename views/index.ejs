<%- include('components/head') %>
<%- include('components/header') %>
<style>
  a {
    color: #fff;
  }
</style>
<div class="container">
<div class="row">
  <% categories.forEach((cat)=>{ %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3><a href="/results?cat=<%= cat._id %>&p=0"><%= cat.name %></a></h3>
    </div>
    <div class="panel-body">
      <% if (cat.movies && cat.movies.length > 0) { %>
      <% cat.movies.forEach((item)=>{ %>
      <div class="col-md-2">
        <div class="thumbnail">
          <a href="/movie/<%= item._id %>">
            <% if(item.poster.indexOf('https:') > -1){ %>
            <img src="<%= item.poster %>" alt="<%= item.title %>" />
            <% } else { %>
            <img src="/upload/<%= item.poster %>" alt="<%= item.title %>" />
            <% } %>
          </a>
          <div class="caption">
            <h3><%= item.title %></h3>
            <p>
              <a href="/movie/<%= item._id %>" role="button" class="btn btn-primary">观看预告片</a>
            </p>
          </div>
        </div>
      </div>
      <% }) %>
      <% } %>
    </div>
  </div>
  <% }) %>
</div>
</div>
</body>
</html>