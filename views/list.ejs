<%- include('components/head') %>
<%- include('components/header') %>
<div class="container">
  <div class="row">
    <table class="table table-hover table-bordered">
      <thead>
      <tr>
        <th>电影名字</th>
        <th>导演</th>
        <th>国家</th>
        <th>语言</th>
        <th>上映年份</th>
        <th>录入时间</th>
        <th>更新时间</th>
        <th>pv</th>
        <th>简介</th>
        <th>查看</th>
        <th>更新</th>
        <th>删除</th>
      </tr>
      <tbody>
      <% movies.forEach((item)=>{ %>
      <tr class="item-id-<%= item._id %>">
        <td><%= item.title %></td>
        <td><%= item.director %></td>
        <td><%= item.country %></td>
        <td><%= item.language %></td>
        <td><%= item.year %></td>
        <td><%= moment(item.meta.createAt).format('YYYY/MM/DD')%></td>
        <td><%= moment(item.meta.updateAt).format('YYYY/MM/DD')%></td>
        <td><%= item.pv %></td>
        <td><%= item.summary %></td>
        <td><a href="/movie/<%= item._id %>" target="_blank">查看</a></td>
        <td><a href="/admin/list/update/<%= item._id %>" target="_blank">修改</a></td>
        <td><a class="btn btn-danger del" href="/admin/remove/<%= item._id %>">删除</a></td>
      </tr>
      <% }) %>
      </tbody>
      </thead>
    </table>
  </div>
</div>
</body>
</html>